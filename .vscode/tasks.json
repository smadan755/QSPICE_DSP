{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build QSPICE DLL (MSVC)",
            "type": "shell",
            "command": "${workspaceFolder}\\build_qspice_dll.bat",
            "args": [
                "${file}"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Build QSPICE DLL (GCC)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-shared",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.dll",
                "${file}",
                "-O2",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
